{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/styles/*": [
        "./src/styles/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/api/*": [
        "./src/api/*"
      ],
    },
    "moduleResolution": "node"
  }
}
